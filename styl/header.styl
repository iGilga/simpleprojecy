.header
  &-wrp
    min-height: 300px
    grid-col 0 0 1fr 1fr

  &-cnt
    & > h3
      text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3)
      fontly: 60px 400 1.2
      margin: 0
    &-list
      margin: 50px 0 0 0
      list-style-type: none
      &-item
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.3)
        fontly: 20px 400 36px
        position: relative
        &:before
            content: ""
            width: 25px
            height: 19px
            display: block
            position: absolute
            background-image: url(img/check_icon_346.png)
            background-size: cover
            top: 8px
            left: -30px
  &-img
    width: 469px
    height: 214px
  &-title
    fontly: 30px 400 36px
    color: $color.GreyDark
    text-align: center
    margin: 0 0 30px 0
